<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.backgroundexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.backgroundexample.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NameCardActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".URLActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".ETCActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".QRSettingActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".NameCardGroupActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>
