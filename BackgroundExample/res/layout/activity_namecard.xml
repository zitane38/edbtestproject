<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffbdbdc7"
    android:focusable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/namecard_top_rl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/qr_mk_bg_bottom_radius01" >

        <TextView
            android:id="@+id/namecard_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="명  함"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff3f3ff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/namecard_up_sign_rl"
        android:layout_width="match_parent"
        android:layout_height="30dp" >

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/namecard_group_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="그        룹"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/namecard_group_number_tv"
                    android:layout_toRightOf="@+id/textView11"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="친 구"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/namecard_group_add_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_btn_all_radius03"
                    android:text="+"
                    android:textColor="#fff3f3ff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/namecard_group_number_tv"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/namecard_group_add_btn"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:textColor="#fff3f3ff" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="성        명"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="2"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="회  사  명"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="3"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="전        화"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="4"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="핸  드  폰"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="5"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="이  메  일"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="6"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="홈페이지"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="7"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="회사주소"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="8"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/qr_mk_tv_left_radius01"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="메        모"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff3f3ff"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr_mk_et_no_radius01"
                    android:ems="10"
                    android:singleLine="true"
                    android:textColor="#fff3f3ff" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qr_mk_tv_right_radius01"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="9"
                    android:textColor="#fff3f3ff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/namecard_down_sign_rl"
        android:layout_width="match_parent"
        android:layout_height="30dp" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/namecard_qrmake_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/namecard_qrmake_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/qr_mk_btn_all_radius01"
            android:gravity="center"
            android:text="QR코드 생성"
            android:textColor="#ff454552"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
